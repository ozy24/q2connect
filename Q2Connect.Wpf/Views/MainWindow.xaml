<Window x:Class="Q2Connect.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Q2Connect.Wpf.ViewModels"
        xmlns:converters="clr-namespace:Q2Connect.Wpf.Converters"
        mc:Ignorable="d"
        Title="Q2Connect" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/icon.ico">
    <Window.Resources>
        <converters:Q2ColorToBrushConverter x:Key="ColorConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Grid Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Command="{Binding RefreshCommand}" 
                        Width="100" Height="32" Margin="0,0,10,0" 
                        IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBooleanConverter}}">
                    <AccessText Text="_Refresh"/>
                </Button>
                <Button Command="{Binding ConnectCommand}" 
                        Width="100" Height="32" Margin="0,0,10,0">
                    <AccessText Text="_Connect"/>
                </Button>
                <Button Command="{Binding ToggleFavoriteCommand}" 
                        Width="100" Height="32" Margin="0,0,10,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <AccessText Text="_Favorite"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedServer.IsFavorite}" Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <AccessText Text="_Unfavorite"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Command="{Binding OpenSettingsCommand}" 
                        Width="100" Height="32" Margin="0,0,10,0">
                    <AccessText Text="_Settings"/>
                </Button>
                <Button Command="{Binding OpenLogCommand}" 
                        Width="100" Height="32" Margin="0,0,10,0">
                    <AccessText Text="_Log"/>
                </Button>
                <Button Command="{Binding OpenAboutCommand}" 
                        Width="100" Height="32">
                    <AccessText Text="_About"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="10,5" SelectedIndex="{Binding SelectedTabIndex}" PreviewKeyDown="TabControl_PreviewKeyDown">
            <!-- Public Servers Tab -->
            <TabItem Header="Public Servers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Row="0" Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox IsChecked="{Binding IncludePlayerNamesInSearch}" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,0"/>
                            <TextBlock Text="Include player names" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Main Content: Server List and Players -->
                    <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Server List -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Servers}"
                      SelectedItem="{Binding SelectedServer}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      MouseDoubleClick="DataGrid_MouseDoubleClick"
                      PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                      PreviewKeyDown="DataGrid_PreviewKeyDown"
                      TextElement.FontSize="12">
                <DataGrid.ContextMenu>
                    <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                        <MenuItem Header="Copy Server Details" Command="{Binding CopyServerDetailsCommand}"/>
                        <MenuItem Header="Copy Server Name" Command="{Binding CopyServerNameCommand}"/>
                        <MenuItem Header="Copy IP Address" Command="{Binding CopyIpAddressCommand}"/>
                        <Separator/>
                        <MenuItem Header="{Binding ToggleFavoriteMenuText}" Command="{Binding ToggleFavoriteCommand}"/>
                        <MenuItem Header="Add to Address Book" Command="{Binding AddToAddressBookCommand}"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Server Name" Binding="{Binding Hostname, Converter={StaticResource ColorConverter}}" Width="*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Map" Binding="{Binding Map}" Width="120">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Mod" Binding="{Binding Mod}" Width="100">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Players" Binding="{Binding PlayersText}" Width="80">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Ping" Binding="{Binding PingText}" Width="80">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>

            <!-- Players List -->
            <DataGrid Grid.Column="2"
                      ItemsSource="{Binding Players}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      TextElement.FontSize="12">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Frags" Binding="{Binding Score}" Width="52">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Ping" Binding="{Binding Ping}" Width="50">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name, Converter={StaticResource ColorConverter}}" Width="*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="Padding" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Address Book Tab -->
            <TabItem Header="Address Book">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Entry Panel -->
                    <Grid Grid.Row="0" Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Address:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1" Text="{Binding AddressBookViewModel.NewAddress}" 
                                 Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="2" Text="Label:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="3" Text="{Binding AddressBookViewModel.NewLabel}" 
                                 Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,10,0"/>
                        <Button Grid.Column="4" Content="Add" Command="{Binding AddressBookViewModel.AddCommand}" 
                                Width="80" Height="32" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Address Book List -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding AddressBookViewModel.Entries}"
                              SelectedItem="{Binding AddressBookViewModel.SelectedEntry}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              MouseDoubleClick="AddressBookDataGrid_MouseDoubleClick"
                              TextElement.FontSize="12">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Address" Binding="{Binding DisplayText}" Width="*">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                        <Setter Property="Padding" Value="8,0,0,0"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="8,0,0,0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext.AddressBookViewModel, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="Connect" Command="{Binding ConnectCommand}"/>
                                <Separator/>
                                <MenuItem Header="Copy Details" Command="{Binding CopyDetailsCommand}"/>
                                <Separator/>
                                <MenuItem Header="Edit" Command="{Binding EditCommand}"/>
                                <Separator/>
                                <MenuItem Header="Delete" Command="{Binding DeleteCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Height="40" Padding="6,2">
            <StatusBarItem Padding="10,0" HorizontalAlignment="Center">
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

